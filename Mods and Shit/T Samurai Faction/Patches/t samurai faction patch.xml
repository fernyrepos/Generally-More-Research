<?xml version="1.0" encoding="utf-8" ?>
<Patch>   

<!-- T SAMURAI FACTION -->
<Operation Class="PatchOperationFindMod">
  <mods>
    <li>Royalty</li>
  </mods>

  <match Class="PatchOperationSequence">
    <operations>
    <li Class="PatchOperationRemove">
      <success>Always</success>
      <xpath>Defs/ResearchProjectDef[defName="TSF_Spirit"]</xpath>
    </li>

    <li Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[@Name="TSFNatureShrineBase"]/researchPrerequisites</xpath>
      <match Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@Name="TSFNatureShrineBase"]/researchPrerequisites</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[@Name="TSFNatureShrineBase"]</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </nomatch>
    </li>

    <li Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Small"]/researchPrerequisites</xpath>
      <match Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Small"]/researchPrerequisites</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Small"]</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </nomatch>
    </li>

    <li Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Large"]/researchPrerequisites</xpath>
      <match Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Large"]/researchPrerequisites</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="TSFNatureShrine_Large"]</xpath>
        <value>
          <researchPrerequisites>
            <li>Ferny_NatureShrines</li>
          </researchPrerequisites>
        </value>
      </nomatch>
    </li>

  </operations>
  </match>
</Operation>

</Patch>