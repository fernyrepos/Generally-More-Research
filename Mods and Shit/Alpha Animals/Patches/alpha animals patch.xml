                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="AA_HexaGelBattery"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                        <li>Ferny_HexagelBattery</li>
                        </researchPrerequisites>
                    </value>
                </Operation>

                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="AA_HexaGel"]/description</xpath>
                    <value>
                        <description>A crystallized and condensed variety of blue gel. Hexagel is capable of storing much more energy than its non-refined cousin, but it also seems to be quite unstable. Hexagel can be used to build powerful batteries and generators if researched.</description>
                    </value>
                </Operation>
                

                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="AA_HexagelCoreReactor"]/researchPrerequisites</xpath>
